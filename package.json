{
  "name": "thenlint",
  "version": "0.1.1",
  "description": "A linter for promises that checks for possible Promise.then usage errors and advises to use Promise.done instead.",
  "main": "lint.js",
  "bin": {
    "thenlint": "bin/main.js"
  },
  "directories": {
    "example": "example",
    "test": "test"
  },
  "dependencies": {
    "falafel": "~0.3.1",
    "optimist": "~0.6.0",
    "through": "~2.3.4",
    "multi-glob": "~0.4.0"
  },
  "devDependencies": {
    "tap": "~0.4.6"
  },
  "scripts": {
    "test": "tap test/*.js"
  },
  "keywords": [
    "promise",
    "then",
    "done",
    "lint"
  ],
  "author": "spion",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/spion/thenlint.git"
  },
  "bugs": {
    "url": "https://github.com/spion/thenlint/issues"
  },
  "homepage": "https://github.com/spion/thenlint"
}
